<div class="container">
    <h1>Basic Table</h1>
    <p>The .table class adds basic styling(light padding and horizontal dividers) to a table</p>
    <table class="table">
          <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each model as |person|}}
            <tr>
                <td>{{person.firstName}}</td>
                <td>{{person.lastName}}</td>
                <td>{{person.email}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

